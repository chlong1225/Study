<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ElipsisTextView">
        <!--收缩文本最大行数-->
        <attr name="maxShrinkLines" format="integer"/>
        <!--收缩文本右边的省略号-->
        <attr name="ellipsizeHint" format="string"/>
        <!--收缩文本右边的icon-->
        <attr name="shink_icon" format="reference|integer"/>
        <!--展示文本右边的icon-->
        <attr name="expand_icon" format="reference|integer"/>
    </declare-styleable>

    <!--控件设置shape类型的背景-->
    <!--填充的颜色-->
    <attr name="solid_color" format="color"/>
    <!--描边的颜色-->
    <attr name="stroke_color" format="color"/>
    <!--描边的宽度-->
    <attr name="stroke_width" format="dimension"/>
    <!--四个圆角的大小-->
    <attr name="all_radius" format="dimension"/>
    <!--左上方的圆角大小-->
    <attr name="top_left_radius" format="dimension"/>
    <!--右下方的圆角大小-->
    <attr name="top_right_radius" format="dimension"/>
    <!--左下方的圆角大小-->
    <attr name="bottom_left_radius" format="dimension"/>
    <!--右下方的圆角大小-->
    <attr name="bottom_right_radius" format="dimension"/>

    <declare-styleable name="BLTextView">
        <attr name="solid_color"/>
        <attr name="stroke_color"/>
        <attr name="stroke_width"/>
        <attr name="all_radius"/>
        <attr name="top_left_radius"/>
        <attr name="top_right_radius"/>
        <attr name="bottom_right_radius"/>
        <attr name="bottom_left_radius"/>
    </declare-styleable>

    <declare-styleable name="BLConstraintLayout">
        <attr name="solid_color"/>
        <attr name="stroke_color"/>
        <attr name="stroke_width"/>
        <attr name="all_radius"/>
        <attr name="top_left_radius"/>
        <attr name="top_right_radius"/>
        <attr name="bottom_right_radius"/>
        <attr name="bottom_left_radius"/>
    </declare-styleable>

</resources>